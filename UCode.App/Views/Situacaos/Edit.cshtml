@model UCode.App.ViewModels.SituacaoViewModel

@{
    ViewData["Title"] = "Editar Situação";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <!--</><div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <vc:summary></vc:summary>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StatusId" class=" control-label"></label><br />
                <label><b>@Model.Status.Nome </b></label>
                
            </div>
            <div class="form-group">
                <label asp-for="MovimentadoEm" class="control-label"></label>
                <input asp-for="MovimentadoEm" class="form-control" />
                <span asp-validation-for="MovimentadoEm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalhes" class="control-label"></label>
                <input asp-for="Detalhes" class="form-control" />
                <span asp-validation-for="Detalhes" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model UCode.App.ViewModels.ProgressaoViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza de que deseja excluir?</h3>
<vc:summary></vc:summary>

<div>
    <hr />
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Classe</th>
                <th>Data Inicial</th>
                <th>Data Final</th>
                <th>Observação</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Classe.Nome)</td>
                <td>@Html.DisplayFor(model => model.DataInicial)</td>
                <td>@Html.DisplayFor(model => model.DataFinal)</td>
                <td>@Html.DisplayFor(model => model.Observacao)</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>

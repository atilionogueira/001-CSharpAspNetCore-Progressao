@model UCode.App.ViewModels.ComprovanteViewModel

@{
    ViewData["Title"] = "Detalhes do Comprovante";
}

<h4 style="padding-top: 10px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Arquivo" alt="@Model.Arquivo" style="width: 300px; height: 428px" />
    </div>
    <dl class="col-md-6">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Progressao)
        </dt>
        <dd class="col-sm-10">
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Progressao.Observacao)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Atividade)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Atividade.Detalhes)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataFinal)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
        </dd>

    </dl>
</div>
<div>
    <a style="margin-top: 10px" class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a style="margin-top: 10px" class="btn btn-info" asp-action="Index">Voltar</a>
</div>

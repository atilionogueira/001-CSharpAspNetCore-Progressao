@model UCode.App.ViewModels.ComprovanteViewModel

@{
    ViewData["Title"] = "Delete";
}
<h3>Tem certeza de que deseja excluir?</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Arquivo" alt="@Model.Arquivo" style="width: 300px; height: 428px" />
    </div>
    <dl class="col-md-6">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Progressao)
        </dt>
        <dd class="col-sm-10">
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Progressao.Observacao)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataFinal)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Atividade)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Atividade.Detalhes)
        </dd>


    </dl>
    <div class="col-md-4" style="margin-top: 10px">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </form>
    </div>

</div>
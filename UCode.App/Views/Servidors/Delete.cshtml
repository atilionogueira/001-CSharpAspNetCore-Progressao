@model UCode.App.ViewModels.ServidorViewModel
@using UCode.App.Extensions

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza de que deseja excluir?</h3>
<vc:summary></vc:summary>

<div>
    <hr />
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Siape</th>
                <th>Cpf</th>
                <th>Campus</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.NomeCompleto)</td>
                <td>@Model.Siape.FormataSiape()</td>
                <td>@Model.Cpf.FormataCpf()</td>
                <td>@Html.DisplayFor(model => model.Campus.Nome)</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </form>
    
</div>
